{% extends 'template.twig' %}
{% import 'component.twig' as component %}

{% block title %}Nouveau Ticket{% endblock %}

{% block content %}
    
    <div class="row">
        
        {% if session.id %}
            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="{{component.url('/home') }}"><i class="fa fa-home"></i> Accueil</a></li>
                    <li><a href="{{component.url('/users') }}"><i class="fa fa-users"></i> Gestion des utilisateurs</a></li>
                    <li><a href="{{component.url('/events') }}"><i class="fa fa-eye"></i> Journal des événements</a></li>
                    <li class="active"><a href="{{ component.url('/tickets') }}"><i class="fa fa-ticket"></i> Gestion des tickets</a></li>
                    <li><a href="{{ component.url('/config') }}"><i class="fa fa-wrench"></i> Configuration</a></li>
                    <li><a href="{{ component.url('/tickets/new') }}"><i class="fa fa-ticket"></i> Nouveau Tickets</a></li>
                </ul>
            </div>
        {% endif %}
        <form  method="post">
            <h3 class="col-md-9">Crée un nouveau Ticket</h3>
            <div class="col-md-9">
                
                {{ component.input('email', 'email', '', null, "Adresse email :", 'col-md-9') }}
                {{ component.input('codeacces', 'password', '', null, "Code d'accès :", 'col-md-9') }}
                <div class="form-group col-md-9">
                    <select class="form-control" name="selectprob">
                        {%for subject in subjects  %}
                            <option value="{{subject.id}}">{{subject.value}}</option>
                        {%endfor%}
                        <option value="666">Autre</option>
                    </select>
                </div>
                <div class="form-group col-md-9" id="AfficheTicket">
                    <textarea required name="prob" style="resize: vertical;" class="form-control" id="FormControlTextarea1" placeholder="Expliquez votre problème..." rows="3"></textarea>
                </div>
                <div class="form-group col-md-9">
                    <button type="submit" class="btn btn-success">Envoyer</button>
                </div>
            </div>
    </div>
</form>

{% endblock %}
