{% extends 'template.twig' %}
{% import 'component.twig' as component %}

{% block title %}Nouveau Ticket{% endblock %}

{% block content %}

    <div class="row">

        {% if session.id %}
            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="{{component.url('/home') }}"><i class="fa fa-home"></i> Accueil</a></li>
                    <li><a href="{{component.url('/users') }}"><i class="fa fa-users"></i> Gestion des utilisateurs</a></li>
                    <li><a href="{{component.url('/events') }}"><i class="fa fa-eye"></i> Journal des événements</a></li>
                    <li class="active"><a href="{{ component.url('/tickets') }}"><i class="fa fa-ticket"></i> Gestion des tickets</a></li>
                    <li><a href="{{ component.url('/config') }}"><i class="fa fa-wrench"></i> Configuration</a></li>
                    <li><a href="{{ component.url('/tickets/new') }}"><i class="fa fa-ticket"></i> Nouveau Tickets</a></li>
                </ul>
            </div>
        {% endif %}
        <form  method="post">
            <h3 class="col-md-9">Crée un nouveau Ticket</h3>
            <div class="col-md-9">

                {{ component.input('email', 'email', '', null, "Adresse email :", 'col-md-9') }}
                {{ component.input('codeacces', 'password', '', null, "Code d'accès :", 'col-md-9') }}
                <div class="form-group col-md-9">
                    <select id="selectprob" class="form-control" name="selectprob">
                        {%for subject in subjects  %}
                            <option value="{{subject.id}}">{{subject.value}}</option>
                        {%endfor%}
                        <option value="666">Autre...</option>
                    </select>
                </div>
                <div class="form-group col-md-9" style="display:none;" id="sujetAutre">
                    <input type="text" name="sujet_autre" class="form-control">
                </div>
                <div class="form-group col-md-9" id="AfficheTicket">
                    <textarea maxlength="1000" required name="prob" style="resize: vertical;" class="form-control" id="text" placeholder="Expliquez votre problème..." rows="3"></textarea>
                    <span class="pull-right label label-default" id="count_message"></span>
                </div>
                <div class="form-group col-md-9">
                    <button type="submit" class="btn btn-success">Envoyer</button>
                </div>
            </div>
    </div>
</form>

{% endblock %}
{% block scripts %}
    {{ parent() }}

    <script>
        document.getElementById('selectprob').addEventListener('click', function () {
            if (document.getElementById('selectprob').value == 666) {
                document.getElementById('sujetAutre').style = "display:visible;"
            } else {
                document.getElementById('sujetAutre').style = "display:none;"
            }

        });

        var text_max = 1000;
        $('#count_message').html('0 / ' + text_max);

        $('#text').keyup(function () {
            var text_length = $('#text').val().length;
            var text_remaining = text_max - text_length;

            $('#count_message').html(text_length + ' / ' + text_max);
        });
    </script>
{% endblock %}